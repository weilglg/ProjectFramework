<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/base_main_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/base_title_main_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_title_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/base_title_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/base_title_left_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="@string/base_title_img_left_desc"
                />

            <TextView
                android:id="@+id/base_title_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_title_txt"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/base_title_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/base_title_right_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="@string/base_title_img_right_desc"
                 />

            <TextView
                android:id="@+id/base_title_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_title_txt"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/base_title_left_layout"
            android:layout_toLeftOf="@id/base_title_right_layout"
            android:layout_toRightOf="@id/base_title_left_layout"
            android:layout_toStartOf="@id/base_title_right_layout"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/base_title_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/base_title_mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主标题"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/base_title_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="副标题"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/base_title_body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/base_title_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>